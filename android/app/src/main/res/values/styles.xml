<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTertiary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorSecondary">@color/colorFourth</item>
        <item name="color">@color/colorFifth</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:listDivider">@color/colorPrimary</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:itemBackground">@drawable/menu_popup_selector</item>
        <item name="actionBarPopupTheme">@style/SubmenuHeaderStyle</item>
    </style>

    <style name="AppLightTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightTertiary</item>
        <item name="colorPrimaryDark">@color/colorLightSecondary</item>
        <item name="colorSecondary">@color/colorLightFourth</item>
        <item name="color">@color/colorLightFifth</item>
        <item name="colorAccent">@color/colorLightPrimary</item>
        <item name="android:listDivider">@color/colorLightPrimary</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:itemBackground">@drawable/menu_popup_selector</item>
        <item name="actionBarPopupTheme">@style/SubmenuLightHeaderStyle</item>
    </style>

    <!--Needed for navigation to work -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppLightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor">false</item>
    </style>

    <style name="SubmenuHeaderStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorFourth</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SubmenuLightHeaderStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorLightFourth</item>
        <item name="android:textColor">@color/colorLightPrimary</item>
    </style>


</resources>