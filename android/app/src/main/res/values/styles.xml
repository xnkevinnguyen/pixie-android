<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTertiary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorSecondary">@color/colorFourth</item>
        <item name="color">@color/colorFifth</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:listDivider">@color/colorPrimary</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:spinnerStyle">@style/OverflowMenu</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:itemBackground">@drawable/menu_popup_selector</item>
        <item name="actionBarPopupTheme">@style/SubmenuHeaderStyle</item>
    </style>

    <style name="AppLightTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightTertiary</item>
        <item name="colorPrimaryDark">@color/colorLightSecondary</item>
        <item name="colorSecondary">@color/colorLightFourth</item>
        <item name="color">@color/colorLightFifth</item>
        <item name="colorAccent">@color/colorLightPrimary</item>
        <item name="android:listDivider">@color/colorLightPrimary</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:spinnerStyle">@style/OverflowMenu</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:itemBackground">@drawable/menu_popup_selector</item>
        <item name="actionBarPopupTheme">@style/SubmenuLightHeaderStyle</item>
    </style>

