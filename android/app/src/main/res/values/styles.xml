    <style name="AppPinkTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPinkTertiary</item>
        <item name="colorPrimaryDark">@color/colorPinkSecondary</item>
        <item name="colorSecondary">@color/colorPinkFourth</item>
        <item name="color">@color/colorPinkFifth</item>
        <item name="colorAccent">@color/colorPinkPrimary</item>
        <item name="android:listDivider">@color/colorPinkPrimary</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:spinnerStyle">@style/OverflowMenu</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
