    <style name="AppBlueTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlueTertiary</item>
        <item name="colorPrimaryDark">@color/colorBlueSecondary</item>
        <item name="colorSecondary">@color/colorBlueFourth</item>
        <item name="color">@color/colorBlueFifth</item>
        <item name="colorAccent">@color/colorBluePrimary</item>
        <item name="android:listDivider">@color/colorBluePrimary</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:spinnerStyle">@style/OverflowMenu</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:itemBackground">@drawable/menu_popup_selector</item>
        <item name="actionBarPopupTheme">@style/SubmenuLightHeaderStyle</item>
    </style>

    <!--Needed for navigation to work -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppLightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppGreenTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppPinkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBlueTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:popupBackground">?color</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:popupBackground">?color</item>
    </style>

    <style name="SubmenuHeaderStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorFourth</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SubmenuLightHeaderStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorLightFourth</item>
        <item name="android:textColor">@color/colorLightPrimary</item>
    </style>

</resources>