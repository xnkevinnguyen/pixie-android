<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

        <TextView
            android:id="@+id/history_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollHorizontally="false"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:background="@drawable/history_table_input_border"/>

        <TextView
            android:id="@+id/history_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollHorizontally="false"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:background="@drawable/history_table_input_border"/>

        <TextView
            android:id="@+id/history_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollHorizontally="false"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:background="@drawable/history_table_input_border"/>

        <TextView
            android:id="@+id/history_winner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollHorizontally="false"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:background="@drawable/history_table_input_border"/>

        <TextView
            android:id="@+id/history_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/profile_text"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/history_table_input_border"/>

        <TextView
            android:id="@+id/history_difficulty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollHorizontally="false"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:background="@drawable/history_table_input_border"/>

        <TextView
            android:id="@+id/history_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollHorizontally="false"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:background="@drawable/history_table_input_border"/>
    </LinearLayout>

</LinearLayout>