<?xml version="1.0"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageButton
            android:id="@+id/small_stroke_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_small_size"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/medium_stroke_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_medium_size"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/large_stroke_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_large_size"
            android:layout_weight="1" />

</LinearLayout>