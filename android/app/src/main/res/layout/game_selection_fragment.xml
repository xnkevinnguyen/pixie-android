<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?colorAccent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_select"
        android:textSize="@dimen/profile_titles"
        android:textStyle="bold"
        android:textColor="?colorControlHighlight"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="?color"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorSecondary"
                android:textStyle="bold"
                android:textSize="@dimen/profile_titles"
                android:text="@string/mode1"
                android:gravity="center"
                android:layout_marginBottom="15dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_free_mode"
                android:layout_margin="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mode1_explanation"
                android:textSize="@dimen/profile_text"
                android:gravity="center"
                android:layout_margin="10dp"/>

            <ImageButton
                android:id="@+id/free_for_all"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done"
                android:tint="@color/green"
                android:background="@drawable/button_drawable"
                android:backgroundTint="@android:color/white"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="?color"
            android:layout_margin="15dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorSecondary"
                android:textStyle="bold"
                android:textSize="@dimen/profile_titles"
                android:text="@string/mode2"
                android:gravity="center"
                android:layout_marginBottom="15dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_solo_mode"
                android:layout_margin="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mode2_explanation"
                android:maxWidth="200dp"
                android:textSize="@dimen/profile_text"
                android:gravity="center"
                android:layout_margin="10dp"/>

            <ImageButton
                android:id="@+id/solo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done"
                android:tint="@android:color/darker_gray"
                android:background="@drawable/button_drawable"
                android:backgroundTint="@android:color/white"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="?color"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorSecondary"
                android:textStyle="bold"
                android:textSize="@dimen/profile_titles"
                android:text="@string/mode3"
                android:gravity="center"
                android:layout_marginBottom="15dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_coop_mode"
                android:layout_margin="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mode3_explanation"
                android:textSize="@dimen/profile_text"
                android:gravity="center"
                android:layout_margin="10dp"/>

            <ImageButton
                android:id="@+id/coop"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done"
                android:tint="@android:color/darker_gray"
                android:background="@drawable/button_drawable"
                android:backgroundTint="@android:color/white"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/difficulty_select"
            android:textSize="@dimen/profile_titles"
            android:textStyle="bold"
            android:textColor="?colorControlHighlight"
            android:gravity="center"
            android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/easy"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_easy_diff"
                        app:tint="@color/dark_grey"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/diff1"
                        android:textColor="?colorControlHighlight"
                        android:textSize="@dimen/profile_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/medium"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_medium_diff"
                        app:tint="@color/yellow"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/diff2"
                        android:textColor="?colorControlHighlight"
                        android:textSize="@dimen/profile_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/hard"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_hard_diff"
                        app:tint="@color/dark_grey"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/diff3"
                        android:textColor="?colorControlHighlight"
                        android:textSize="@dimen/profile_text" />
                </LinearLayout>
            </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="15dp"
        android:text="@string/next"
        android:textSize="@dimen/profile_text"
        android:background="@drawable/button_drawable"
        android:textColor="?colorControlHighlight"
        android:gravity="center"
        android:padding="5dp" />
</LinearLayout>