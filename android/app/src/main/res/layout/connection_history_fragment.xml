<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <fragment
        android:id="@+id/history_side_fragment"
        android:name="com.pixie.android.ui.draw.history.connectionHistory.ConnectionHistorySideFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/history_main_fragment"/>

    <fragment
        android:id="@+id/history_main_fragment"
        android:name="com.pixie.android.ui.draw.history.connectionHistory.ConnectionHistoryMainFragment"
        android:layout_width="375dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>