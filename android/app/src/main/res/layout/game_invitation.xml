<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="700dp"
    android:layout_height="match_parent"
    android:background="?colorAccent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="@string/game_result"
        android:textColor="@android:color/white"
        android:textSize="@dimen/profile_titles"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="?color"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mode_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="?colorSecondary"
            android:gravity="center"
            android:textSize="@dimen/profile_titles"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/mode_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/total_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/profile_titles" />

    <TextView
        android:id="@+id/number_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/profile_titles" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/decline_invitation"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:background="?colorSecondary"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/goto_home"
            android:textSize="@dimen/regular_size" />

        <Button
            android:id="@+id/accept_invitation"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:background="?colorSecondary"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/goto_home"
            android:textSize="@dimen/regular_size" />
    </LinearLayout>


</LinearLayout>